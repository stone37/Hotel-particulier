{% macro default(text) %}
    <span class="badge badge-primary">{{ text|trans }}</span>
{% endmacro %}

{% macro status(status) %}
    {% import _self as labels %}

    {% if status %}
        {{ labels.enabled() }}
    {% else %}
        {{ labels.disabled() }}
    {% endif %}
{% endmacro %}

{% macro enabled() %}
    <span class="badge badge-success">
        <i class="fas fa-check mr-1"></i>
        Actif
    </span>
{% endmacro %}

{% macro disabled() %}
    <span class="badge badge-danger">
        <i class="fas fa-times mr-1"></i>
        Inactif
    </span>
{% endmacro %}

{% macro yesNo(value) %}
    {% import _self as labels %}

    {% if value %}
        {{ labels.yes() }}
    {% else %}
        {{ labels.no() }}
    {% endif %}
{% endmacro %}

{% macro yes() %}
    <span class="badge badge-success">
        <i class="fas fa-check mr-1"></i>
        Oui
    </span>
{% endmacro %}

{% macro no() %}
    <span class="badge badge-danger">
        <i class="fas fa-times mr-1"></i>
        Non
    </span>
{% endmacro %}

{% endblock %}

{% block app_body %}
    <section class="mt-4 mb-lg-4 d-flex justify-content-between align-items-center">
        <h3 class="h3-responsive font-weight-stone-600 {#mt-lg-4 mt-md-2 mb-md-2 mb-4#}">Reservations confirmer</h3>
        <div class="d-none d-lg-block">
            <div class="btn-group title" role="group">
                <a href="{{ path('app_dashboard_booking_index') }}"

{% extends "user/layout.html.twig" %}

{% block title 'Fermeture du compte' %}
{% block meta %}
    <meta name="google" content="nositelinkssearchbox">
{% endblock %}

{% block app_body %}
    <section class="mt-4 mb-lg-4 d-flex justify-content-between align-items-center">
        <h3 class="h3-responsive font-weight-stone-600 {#mt-lg-4 mt-md-2 mb-md-2 mb-4#}">Fermer mon compte</h3>
        <div class="d-none d-lg-block">
            <div class="btn-group title" role="group">
                <a href="{{ path('app_user_profil_edit') }}"
                   class="btn btn-md btn-grey waves-effect px-3 px-lg-4" style="border-radius: 0 !important;">
                    Modifier le profil
                </a>
                <a href="{{ path('app_user_change_password') }}"
                   class="btn btn-md btn-grey waves-effect px-3 px-lg-4" style="border-radius: 0 !important;">
                    Modifier le mot de passe
                </a>
                <a href="{{ path('app_user_delete') }}"
                   class="btn btn-md btn-grey-dark waves-effect px-3 px-lg-4" style="border-radius: 0 !important;">
                    Fermeture du compte
                </a>
            </div>
        </div>
    </section>

    {% include "user/account/delete_content.html.twig" %}
{% endblock %}



